<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login | TraceFI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet"/>

  <style>
    body {
      margin: 0;
      background-color: #0A0F24;
      font-family: 'Arial', sans-serif;
    }


    .container-login {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
    }

    .login-box {
      background-color: #111827;
      color: #ffffff;
      padding: 40px 30px;
      border-radius: 20px;
      max-width: 420px;
      width: 100%;
      box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
    }

    .login-box h2 {
      font-weight: bold;
    }
    
    .form-control {
      background-color: #1F2937;
      border: 1px solid #374151;
      color: #fff;
      border-radius: 8px;
      height: 45px;
    }

    .form-control::placeholder {
      color: #9CA3AF;
    }

    .btn-primary {
      background-color: #00C4FF;
      border: none;
      border-radius: 8px;
      font-weight: bold;
    }

    .btn-primary:hover {
      background-color: #00a8e1;
    }

    .form-text a {
      color: #00BFFF;
      text-decoration: none;
    }

    .form-text a:hover {
      text-decoration: underline;
    }

    .qr-box {
      background-color: #1F2937;
      padding: 25px;
      border-radius: 12px;
      text-align: center;
    }

    .qr-placeholder {
      background-color: #4B5563;
      height: 160px;
      width: 160px;
      margin: auto;
      border-radius: 8px;
    }

    .qr-steps {
      text-align: left;
      font-size: 0.9rem;
      margin-top: 20px;
    }

    .qr-steps b {
      color: #ffffff;
    }

    .input-group {
      position: relative;
    }

    .toggle-password {
      position: absolute;
      top: 50%;
      right: 15px;
      transform: translateY(-50%);
      color: #ccc;
      cursor: pointer;
    }
  </style>
</head>
<body>

<%- include('partials/navbar.ejs') %>

<div class="container-login">
  <div class="login-box">
    <h2 class="mb-2">Log in to TraceFI</h2>
    <p class="text-white-50 mb-4">Don't have an account? <a href="/register">Sign up now</a></p>

    <!-- Email Login Only -->
    <div>
        <% if (errors && errors.length > 0) { %>
          <div class="alert alert-danger mt-3">
            <% errors.forEach(function(error) { %>
              <p><%= error %></p>
            <% }); %>
          </div>
        <% } %>

        <% if (messages && messages.length > 0) { %>
          <div class="alert alert-success mt-3">
            <% messages.forEach(function(message) { %>
              <p><%= message %></p>
            <% }); %>
          </div>
        <% } %>

        <form action="/login" method="POST" class="mt-3">
          <div class="mb-3">
            <label for="employee_id" class="form-label">Employee ID</label>
            <input type="text" id="employee_id" name="employee_id" class="form-control" placeholder="Enter your employee ID" required />
          </div>
          <div class="mb-3">
            <label for="userEmail" class="form-label">Email</label>
            <input type="email" id="institute_email" name="institute_email" class="form-control" placeholder="Enter your email" required />
          </div>
          <div class="mb-3">
            <label for="userPassword" class="form-label">Password</label>
            <div class="input-group">
              <input type="password" id="userPassword" name="password" class="form-control" placeholder="************" required />
              <span class="toggle-password" onclick="togglePassword()">
                <i class="bi bi-eye" id="eyeIcon"></i>
              </span>
            </div>
          </div>
          <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">Continue</button>
          <div class="form-text text-center mt-3">
          </div>
        </form>
    </div>
  </div>
</div>

<script>
  function togglePassword() {
    const passwordField = document.getElementById("userPassword");
    const icon = document.getElementById("eyeIcon");
    if (passwordField.type === "password") {
      passwordField.type = "text";
      icon.classList.remove("bi-eye");
      icon.classList.add("bi-eye-slash");
    } else {
      passwordField.type = "password";
      icon.classList.remove("bi-eye-slash");
      icon.classList.add("bi-eye");
    }
  }
</script>

</body>
</html>
