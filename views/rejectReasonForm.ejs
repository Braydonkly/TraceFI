<html>
  <head>
    <title>Reject Client Risk Assessment</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
      .container { max-width: 600px; margin-top: 40px; }
      .form-label { font-weight: bold; }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Reject Client Risk Assessment</h2>
      <% if (typeof confirmation !== 'undefined' && confirmation) { %>
        <div class="alert alert-success mt-4">Rejection submitted successfully for <b><%= client_name %></b>.<br>Your response has been recorded.</div>
        <a href="/home" class="btn btn-primary mt-3">Back to Website</a>
      <% } else { %>
        <p>Please provide a reason for rejecting the risk assessment for <b><%= client_name %></b>:</p>
        <form method="POST" action="/reject/<%= client_id %>/<%= risk_status %>">
          <div class="mb-3">
            <label for="reason" class="form-label">Rejection Reason</label>
            <textarea class="form-control" id="reason" name="reason" rows="4" required placeholder="Enter your reason..."></textarea>
          </div>
          <button type="submit" class="btn btn-danger">Submit Rejection</button>
          <a href="/" class="btn btn-secondary ms-2">Cancel</a>
        </form>
      <% } %>
    </div>
  </body>
</html>
