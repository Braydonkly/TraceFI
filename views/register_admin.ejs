<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register New Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">
  <%- include('partials/navbar.ejs') %>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Register New Admin</h2>

    <!-- Success Message -->
    <% if (messages && messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success">
        <% messages.success.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <!-- Error Message -->
    <% if (messages && messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger">
        <% messages.error.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <!-- Registration Form -->
    <form action="/register-admin" method="POST" enctype="multipart/form-data" class="bg-white p-4 rounded shadow-sm">
      <div class="mb-3">
        <label for="employee_id" class="form-label">Employee ID</label>
        <input type="text" name="employee_id" id="employee_id" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" name="email" id="email" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="profile" class="form-label">Profile Image (optional)</label>
        <input type="file" name="profile" id="profile" class="form-control" />
      </div>

      <button type="submit" class="btn btn-primary w-100">Register Admin</button>
    </form>
  </div>
</body>
</html>
