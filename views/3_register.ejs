<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register - TraceFI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body, html {
      height: 100%;
      margin: 0;
      font-family: 'Arial', sans-serif;
      background-color: #0A0F24;
    }


    .split-container {
      display: flex;
      height: 100vh;
      flex-wrap: wrap;
    }

    .left-panel {
      flex: 1 1 100%;
      background-color: #111827;
      color: #ffffff;
      padding: 60px 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    @media (min-width: 992px) {
      .left-panel {
        flex: 1;
        padding: 60px 40px;
      }
    }

    .right-panel {
      flex: 1;
      background: url('/images/sign.jpg') center/cover no-repeat;
      display: none;
    }

    @media (min-width: 992px) {
      .right-panel {
        display: block;
      }
    }

    .form-control {
      border-radius: 8px;
      height: 45px;
      background-color: #1F2937;
      color: white;
      border: 1px solid #374151;
    }

    .form-control::placeholder {
      color: #9CA3AF;
    }

    .btn-register {
      background-color: #00C4FF;
      color: white;
      border: none;
      height: 45px;
      font-weight: bold;
      border-radius: 8px;
    }

    .btn-register:hover {
      background-color: #00a8e1;
    }

    label {
      font-weight: 500;
    }

    .form-check-label {
      font-weight: normal;
    }

    .form-footer a {
      color: #00BFFF;
      text-decoration: none;
    }

    .form-footer a:hover {
      text-decoration: underline;
    }

    .form-heading {
      font-weight: bold;
      font-size: 1.6rem;
      text-align: center;
    }

    .form-subtext {
      font-size: 0.95rem;
      text-align: center;
    }

    .toggle-password {
      position: absolute;
      top: 50%;
      right: 15px;
      transform: translateY(-50%);
      color: #ccc;
      cursor: pointer;
    }

    .input-group {
      position: relative;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar.ejs') %>

  <div class="split-container">
    <!-- Left Form Panel -->
    <div class="left-panel">
      <div class="w-100" style="max-width: 400px;">
        <h2 class="form-heading mb-3">Sign up for TraceFI</h2>
        <p class="form-subtext mb-4">Already have an account? <a href="/login">Log In</a></p>

        <% if (messages && messages.length > 0) { %>
          <div class="alert alert-danger">
            <% messages.forEach(function(message) { %>
              <p><%= message %></p>
            <% }); %>
          </div>
        <% } %>

        <form action="/register" method="POST" enctype="multipart/form-data">

          <div class="mb-3">
            <label for="employee_id" class="form-label">Employee ID</label>
            <input type="text" id="employee_id" name="employee_id" class="form-control" placeholder="Bank-EMP123456" required <% if (formData && formData.employee_id) { %> value="<%= formData.employee_id %>" <% } %>>
          </div>

          <div class="mb-3">
            <label for="institution" class="form-label">Institution Name</label>
            <input type="text" id="institution" name="institution" class="form-control" placeholder="DBS" required <% if (formData && formData.institution) { %> value="<%= formData.institution %>" <% } %>>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Employee Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } %>>
          </div>

          <div class="mb-3">
            <label for="contactName" class="form-label">Contact Name</label>
            <input type="text" id="contactName" name="contactName" class="form-control" placeholder="Enter your contact name" required <% if (formData && formData.contactName) { %> value="<%= formData.contactName %>" <% } %>>
          </div>

          <div class="mb-3">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="tel" id="phone" name="phone" class="form-control" placeholder="+65 98765432" required <% if (formData && formData.phone) { %> value="<%= formData.phone %>" <% } %>>
          </div>

          <div class="mb-3">
            <label for="userPassword" class="form-label">Password</label>
            <div class="input-group">
              <input type="password" id="userPassword" name="userPassword" class="form-control" placeholder="************" required>
              <span class="toggle-password" onclick="togglePassword()">
                <i class="bi bi-eye" id="eyeIcon"></i>
              </span>
            </div>
          </div>

          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="optIn" name="optIn">
            <label class="form-check-label" for="optIn">I'd like to receive exclusive updates from TraceFI.</label>
          </div>

          <button type="submit" class="btn btn-register w-100">Create Account</button>
        </form>

        <div class="form-footer text-center mt-4 small">
          By submitting, you confirm youâ€™ve read our <a href="#">Privacy Policy</a>.
        </div>
      </div>
    </div>

    <!-- Right Image Panel -->
    <div class="right-panel"></div>
  </div>

  <!-- Password Toggle Script -->
  <script>
    function togglePassword() {
      const passwordField = document.getElementById("userPassword");
      const icon = document.getElementById("eyeIcon");

      if (passwordField.type === "password") {
        passwordField.type = "text";
        icon.classList.remove("bi-eye");
        icon.classList.add("bi-eye-slash");
      } else {
        passwordField.type = "password";
        icon.classList.remove("bi-eye-slash");
        icon.classList.add("bi-eye");
      }
    }
  </script>

  <!-- Bootstrap Icons (for eye icon) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
</html>
