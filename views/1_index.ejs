    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Sticky Navbar */
        .sticky-top {
            position: sticky;
            top: 0;
            z-index: 1030;
            background: #0A0F24;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            background-color: #0A0F24; /* Dark Blue Background */
            color: #ffffff;
        }

        /* Card Animation */
        .card-custom {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s, transform 0.6s;
        }
        .card-custom.visible {
            opacity: 1;
            transform: translateY(0);
        }
        .card-custom .feature-icon {
            font-size: 2.5rem;
            color: #00FFD1;
            margin-bottom: 18px;
        }

        /* Back to Top Button */
        #backToTopBtn {
            display: none;
            position: fixed;
            bottom: 40px;
            right: 40px;
            z-index: 999;
            background: #2563eb;
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 48px;
            height: 48px;
            font-size: 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            cursor: pointer;
            transition: background 0.2s;
        }
        #backToTopBtn:hover {
            background: #1e40af;
        }

        /* Responsive Feature Cards */
        @media (max-width: 991px) {
            .feature-section .row > div[class^='col-'] {
                flex: 0 0 50%;
                max-width: 50%;
            }
        }
        @media (max-width: 767px) {
            .feature-section .row > div[class^='col-'] {
                flex: 0 0 100%;
                max-width: 100%;
            }
            .about-section .row {
                flex-direction: column-reverse;
            }
        }

        /* Hero / Slideshow */
        .slideshow-container {
            position: relative;
            width: 100%;
            height: 90vh;
            overflow: hidden;
        }

        .slide {
            display: none;
            position: absolute;
            width: 100%;
            height: 100%;
        }

        .slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.3;
        }

        .text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            z-index: 2;
        }

        .text-overlay h1 {
            font-size: 60px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .text-overlay p {
            font-size: 22px;
            margin-bottom: 30px;
            color: #cccccc;
        }

        .custom-button {
            background-color: #00FFD1;
            color: #0A0F24;
            padding: 9px 35px;
            font-size: 20px;
            border-radius: 50px;
            text-decoration: none;
            transition: background 0.3s;
        }

        .custom-button:hover {
            background-color: #00ccaa;
            color: #ffffff;
        }

        /* About Us Section */
        .about-section {
            padding: 80px 20px;
            text-align: center;
            background-color: #0D122E;
        }

        .about-section h2 {
            font-size: 40px;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .about-section p {
            font-size: 20px;
            line-height: 1.8;
            max-width: 800px;
            margin: 0 auto;
            color: #cccccc;
        }
        .feature-section {
            padding: 80px 0;
        }

        .card-custom {
            background-color: #0D122E;
            color: #ffffff;
            border: none;
            border-radius: 15px;
            text-align: center;
            padding: 40px 20px;
            transition: transform 0.3s ease;
        }

        .card-custom:hover {
            transform: translateY(-10px);
        }

        .card-custom h5 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .card-custom p {
            font-size: 16px;
            color: #cccccc;
            margin-bottom: 30px;
        }

        /* Footer */
        .footer {
            background-color: #0A0F24;
            color: #cccccc;
            padding: 40px 0;
            text-align: center;
        }

        .footer a {
            color: #00FFD1;
            text-decoration: none;
            margin: 0 15px;
        }

        .footer a:hover {
            color: #ffffff;
        }
    </style>
</head>
